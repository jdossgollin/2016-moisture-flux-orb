  file = {Attachment:/Users/James/Library/Application Support/Zotero/Profiles/vccjxs40.default/zotero/storage/HFESEKGE/Knippertz, Wernli - 2010 - A Lagrangian Climatology of Tropical Moisture Exports to the Northern Hemispheric Extratropics.pdf:application/pdf}
