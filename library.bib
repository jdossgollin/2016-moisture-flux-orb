  keywords = {Climate Dynamics,Dynamics},
  file = {Attachment:/Users/James/Library/Application Support/Zotero/Profiles/vccjxs40.default/zotero/storage/FFJN3XP6/Stephens et al. - 2012 - An update on Earth's energy balance in light of the latest global observations.pdf:application/pdf}
