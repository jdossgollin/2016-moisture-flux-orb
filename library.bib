  pages = {4065--4088},
  file = {Attachment:/Users/James/Library/Application Support/Zotero/Profiles/vccjxs40.default/zotero/storage/VN4KUEUI/Seager et al. - 2005 - Modeling of Tropical Forcing of Persistent Droughts and Pluvials over Western North America 1856–2000.pdf:application/pdf}
