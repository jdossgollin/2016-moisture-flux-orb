  file = {Full Text PDF:/Users/James/Library/Application Support/Zotero/Profiles/vccjxs40.default/zotero/storage/CIGJXX9B/Jones and Carvalho - 2002 - Active and Break Phases in the South American Mons.pdf:application/pdf;Snapshot:/Users/James/Library/Application Support/Zotero/Profiles/vccjxs40.default/zotero/storage/9CUHX7BK/1520-0442(2002)0150905AABPIT2.0.html:text/html}
