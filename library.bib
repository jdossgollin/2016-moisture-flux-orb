  pages = {5915--5934},
  file = {Full Text PDF:/Users/James/Library/Application Support/Zotero/Profiles/vccjxs40.default/zotero/storage/UTIIM754/Muñoz et al. - 2016 - Cross–Time Scale Interactions and Rainfall Extreme.pdf:application/pdf;Snapshot:/Users/James/Library/Application Support/Zotero/Profiles/vccjxs40.default/zotero/storage/224XA8F7/JCLI-D-15-0699.html:text/html}
